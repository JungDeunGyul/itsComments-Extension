{
  "manifest_version": 3,
  "name": "Your Extension",
  "version": "1.0",
  "description": "Description of your extension",
  "permissions": ["tabs", "activeTab"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "64": "icons/64.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png"
  },
  "content_security_policy": {
    "default-src": "'self' https:; object-src 'self';"
  }
}
